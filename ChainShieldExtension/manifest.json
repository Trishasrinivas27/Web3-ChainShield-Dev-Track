{
  "manifest_version": 3,
  "name": "Smart Contract Scam Detector",
  "version": "1.0",
  "permissions": ["storage"],
  "host_permissions": [
    "https://web3-chainshield-dev-track-production.up.railway.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
