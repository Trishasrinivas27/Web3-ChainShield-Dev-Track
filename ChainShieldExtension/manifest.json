{
  "manifest_version": 3,
  "name": "Smart Contract Scam Detector",
  "version": "1.0",
  "description": "Detects fake or scam contract addresses in real-time.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://web3-chainshield-dev-track-production.up.railway.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
